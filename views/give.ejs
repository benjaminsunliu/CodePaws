<%- include("partials/header")%>
<div id="give" class="section">
    <h2 class="content">Have a Pet to Give Away</h2>
    <fieldset>
        <legend>Give Away Form</legend>
        <br>
        <form onsubmit="validateGiveForm(event)">
            <label class="type">Type*:</label>
            <input name="type" type="radio" id="givetypedog" value="dog"> Dog
            <input name="type" type="radio" id="givetypecat" value="cat"> Cat
            <br><br>
            <label for="breed">Breed*:
                <select name="givebreed" id="breed">
                    <optgroup label="Dog Breeds" id="givecatbreeds">
                        <option value="labrador">Labrador Retriever</option>
                        <option value="german">German Shepherd</option>
                        <option value="golden">Golden Retriever</option>
                        <option value="husky">Husky</option>
                        <option value="corgi">Corgi</option>
                        <option value="Shiba Inu">Shiba Inu</option>
                        <option value="bichon">Bichon</option>
                        <option value="yorkshire">Yorkshire Terrier</option>
                    </optgroup>
                    <optgroup label="Cat breeds" id="givedogbreeds">
                        <option value="shorthair">American Shorthair</option>
                        <option value="ragdoll">Ragdoll</option>
                        <option value="siamese">Siamese</option>
                        <option value="persian">Persian</option>
                        <option value="ragdoll">Ragdoll</option>
                        <option value="sphynx">Sphynx</option>
                    </optgroup>
                    <optgroup label="Other" id="giveother">
                        <option value="mix">Mix Breed</option>
                        <option value="other">Other</option>
                    </optgroup>
                </select>
            </label>
            <br><br>
            <label for="age">
                Age*:
                <select name="age" id="age">
                    <option value="puppy">Puppy/Kitten (0-1 year)</option>
                    <option value="young">Young (1-3 years)</option>
                    <option value="adult">Adult (3-7 years)</option>
                    <option value="senior">Senior (7-10 years)</option>
                    <option value="na">Doesn't Matter</option>
                </select>
            </label>
            <br><br>
            <label class="gender">Gender*:</label>
            <input type="radio" name="gender" id="givemale" value="male"> Male
            <input type="radio" name="gender" id="givefemale" value="female"> Female
            <input type="radio" name="gender" id="givena" value="na"> Doesn't Matter
            <br><br>
            <label>
                Gets along with:
            </label>
            <input type="checkbox" name="getalongdog" value="true">
            Dogs
            <input type="checkbox" name="getalongcat" value="true">
            Cats
            <input type="checkbox" name="getalongchildren" value="true">
            Children
            <br><br>
            <label>
                Comments:
                <br>
                <textarea name="comments" id="comments" cols="30" rows="5"></textarea>
            </label>
            <br><br>
            <label>
                Name*:
                <input type="text" name="name" id="name">
            </label>
            <br><br>
            <label>
                Email*:
                <input type="email" name="email" id="email">
            </label>
            <br><br>
            <input type="submit" value="Submit">
            <input type="reset" value="Reset">
            <br><br>
        </form>
    </fieldset>
    <p><i>Note: For this form, I set the "Get Along" & "Comments" options to be optional.</i></p>
</div>
<%- include("partials/footer")%>
