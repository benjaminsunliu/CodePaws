<%- include("partials/header")%>
<div id="create" class="section">
    <div class="content">
        <h2 class="content">Login to your Account</h2><br>
        <fieldset class="create">
            <legend><strong>Enter your information below:</strong></legend>
            <form action="/login" method="post">
                <label for="username"><strong>Username*:</strong></label>
                <input type="text" name="username" id="username" required><br><br>

                <label for="password"><strong>Password*:</strong></label>
                <input type="password" name="password" id="password" required><br><br>

                <input type="submit" value="Login" style="padding: 2px"><br>
                <% if(loginError) { %>
                    <p style="color: red"><%= loginError %></p>
                <% } %>
                <br><p>Don't have an account? <a href="/create">Register here</a></p>
            </form>
        </fieldset>
    </div>
</div>
<%- include("partials/footer")%>
