<%- include("partials/header")%>
<div id="find" class="section">
    <h2 class="content">Find a Dog/Cat</h2>
    <fieldset>
        <legend>Adoption Form</legend>
        <br>
        <form onsubmit="validateFindForm(event)">
            <label class="type">Type*:</label>
            <input name="type" type="radio" id="typedog" value="dog"> Dog
            <input name="type" type="radio" id="typecat" value="cat"> Cat

            <br><br>
            <label for="breed">Breed*:
                <select name="breed" id="breed">
                    <optgroup label="Dog Breeds" id="catbreeds">
                        <option value="labrador">Labrador Retriever</option>
                        <option value="german">German Shepherd</option>
                        <option value="golden">Golden Retriever</option>
                        <option value="husky">Husky</option>
                        <option value="corgi">Corgi</option>
                        <option value="Shiba Inu">Shiba Inu</option>
                        <option value="bichon">Bichon</option>
                        <option value="yorkshire">Yorkshire Terrier</option>
                    </optgroup>
                    <optgroup label="Cat breeds" id="dogbreeds">
                        <option value="shorthair">American Shorthair</option>
                        <option value="ragdoll">Ragdoll</option>
                        <option value="siamese">Siamese</option>
                        <option value="persian">Persian</option>
                        <option value="ragdoll">Ragdoll</option>
                        <option value="sphynx">Sphynx</option>
                    </optgroup>
                    <optgroup label="Other" id="other">
                        <option value="na">Doesn't Matter</option>
                    </optgroup>
                </select>
            </label>
            <br><br>
            <label for="age">
                Age*:
                <select name="age" id="age">
                    <option value="puppy">Puppy/Kitten (0-1 year)</option>
                    <option value="young">Young (1-3 years)</option>
                    <option value="adult">Adult (3-7 years)</option>
                    <option value="senior">Senior (7-10 years)</option>
                    <option value="na">Doesn't Matter</option>
                    <option value="other">Other</option>
                </select>
            </label>
            <br><br>
            <label class="gender">Gender*:</label>
            <input type="radio" name="gender" id="male" value="male"> Male
            <input type="radio" name="gender" id="female" value="female"> Female

            <label for="na">
                <input type="radio" name="gender" id="na" value="na">
                Doesn't Matter
            </label>
            <br><br>
            <label>
                Needs to get along with:
            </label>
            <input type="checkbox" name="getalongdog" value="true">
            Dogs
            <input type="checkbox" name="getalongcat" value="true">
            Cats
            <input type="checkbox" name="getalongchildren" value="true">
            Children

            <br><br>
            <input type="submit" value="Submit">
            <input type="reset" value="Reset">
            <br><br>
        </form>
    </fieldset>
    <p><i>Note: For this form, I set the "Get Along" option to be optional.</i></p>
</div>
<%- include("partials/footer")%>
